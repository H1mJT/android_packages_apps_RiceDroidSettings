<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lineage="http://schemas.android.com/apk/res/lineageos.platform"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/rice_customizations_title" >

    <PreferenceCategory
        android:title="@string/lockscreen_title">

    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="lockscreen_battery_info"
        android:icon="@drawable/ic_battery_charging"
        android:title="@string/lockscreen_battery_info_title"
        android:summary="@string/lockscreen_battery_info_summary"
        android:defaultValue="true" />

    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="use_secondary_color_clock"
        android:icon="@drawable/ic_lock_clock"
        android:title="@string/lockscreen_clock_color_title"
        android:summary="@string/lockscreen_clock_color_summary"
        android:defaultValue="false" />

    <Preference
        android:key="lockscreen_shortcuts"
        android:icon="@drawable/ic_lockscreen_shortcuts"
        android:title="@string/lockscreen_shortcuts"
        android:summary="@string/lockscreen_shortcuts_summary" >
        <intent android:action="android.intent.action.MAIN"
        android:targetPackage="com.android.systemui"
        android:targetClass="com.android.systemui.tuner.LockscreenActivity" />
    </Preference>

    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/misc_title">

    <!-- Gaming mode -->
    <Preference
        android:key="gaming_mode"
        android:icon="@drawable/ic_gaming"
        android:title="@string/gaming_mode_title"
        android:summary="@string/gaming_mode_summary">

        <intent
        android:action="android.intent.action.MAIN"
        android:targetPackage="io.chaldeaprjkt.gamespace"
        android:targetClass="io.chaldeaprjkt.gamespace.settings.SettingsActivity" />
    </Preference>
    
    <Preference
        android:key="omnijaws_settings"
        android:icon="@drawable/ic_weather"
        android:title="@string/qs_weather_settings_title"
        android:summary="@string/qs_weather_settings_summary"
        android:fragment="com.rice.settings.fragments.OmniJawsSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/notifications_title">
        
    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="alert_slider_notifications"
        android:icon="@drawable/ic_light_switch"
        android:title="@string/alert_slider_notifications_title"
        android:summary="@string/alert_slider_notifications_summary"
        android:defaultValue="true" />
    
    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="media_artwork_blur_enabled"
        android:icon="@drawable/ic_blur"
        android:title="@string/artwork_media_background_enable_blur_title"
        android:defaultValue="false" />

    <com.rice.settings.preferences.SystemSettingSeekBarPreference
        android:key="media_artwork_blur_radius"
        android:icon="@drawable/ic_custom_seekbar_plus"
        android:title="@string/artwork_media_background_blur_radius_title"
        android:defaultValue="1"
        android:max="25"
        settings:min="1" />
      
    <com.rice.settings.preferences.GlobalSettingSwitchPreference
        android:key="heads_up_notifications_enabled"
        android:icon="@drawable/ic_headsup"
        android:title="@string/notification_heads_up_title"
        android:summary="@string/notification_heads_up_summary"
        android:defaultValue="true" />

    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="less_boring_heads_up"
        android:icon="@drawable/ic_headsup_sleep"
        android:title="@string/less_boring_heads_up_title"
        android:summary="@string/less_boring_heads_up_summary"
        android:defaultValue="false"
        android:dependency="heads_up_notifications_enabled" />
  
    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="reticker_status"
        android:icon="@drawable/ic_message_fast"
        android:title="@string/reticker_title"
        android:summary="@string/reticker_summary" />

    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="reticker_colored"
        android:icon="@drawable/ic_message_fast"
        android:title="@string/reticker_colored_title"
        android:summary="@string/reticker_colored_summary"
        android:dependency="reticker_status" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/statusbar_title">

    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="show_fourg_icon"
        android:icon="@drawable/ic_fourg"
        android:title="@string/show_fourg_icon_title"
        android:summary="@string/show_fourg_icon_summary"
        android:defaultValue="false"/>
        
    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:icon="@drawable/ic_brightness_auto"
        android:title="@string/status_bar_toggle_brightness_title"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />
   
    <com.rice.settings.preferences.SystemSettingSwitchPreference
        android:key="statusbar_colored_icons"
        android:icon="@drawable/ic_shapes"
        android:title="@string/statusbar_colored_icons_title"
        android:summary="@string/statusbar_colored_icons_summary"
        android:defaultValue="false" />
        
    <Preference
        android:key="network_traffic_settings"
        android:icon="@drawable/ic_fourg"
        android:title="@string/network_traffic_title"
        android:summary="@string/network_traffic_summary"
        android:fragment="com.rice.settings.fragments.NetworkTrafficSettings" />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/ui_title">
        
    <!-- Font style -->
    <Preference
        android:key="android.theme.customization.fonts"
        android:icon="@drawable/ic_font"
        android:title="@string/theme_customization_font_title"
        android:summary="@string/theme_customization_font_summary"
        android:fragment="com.rice.settings.fragments.ui.FontsPicker"/>

    <!-- Icon pack -->
    <Preference
        android:key="android.theme.customization.icon_pack"
        android:icon="@drawable/ic_drawing"
        android:title="@string/theme_customization_icon_pack_title"
        android:summary="@string/theme_customization_icon_pack_summary"
        android:fragment="com.rice.settings.fragments.ui.StatusbarIcons"/>
        
    <!-- Signal icon style -->
    <Preference
        android:key="android.theme.customization.signal_icon"
        android:icon="@drawable/ic_signal"
        android:title="@string/theme_customization_signal_icon_title"
        android:summary="@string/theme_customization_signal_icon_summary"
        android:fragment="com.rice.settings.fragments.ui.SignalIcons"/>
        
    <!-- Adaptive icon pack -->
    <Preference
        android:key="android.theme.customization.adaptive_icon_shape"
        android:icon="@drawable/ic_shapes"
        android:title="@string/theme_customization_icon_shape_title"
        android:summary="@string/theme_customization_icon_shape_summary"
        android:fragment="com.rice.settings.fragments.ui.IconShapes"/>

    <!-- Wifi icon style -->
    <Preference
        android:key="android.theme.customization.wifi_icon"
        android:icon="@drawable/ic_wifi"
        android:title="@string/theme_customization_wifi_icon_title"
        android:summary="@string/theme_customization_wifi_icon_summary"
        android:fragment="com.rice.settings.fragments.ui.WifiIcons"/>

    </PreferenceCategory>

</PreferenceScreen>
